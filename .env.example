# API Keys and Credentials
OPENAI_API_KEY=your_openai_api_key_here
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_API_TOKEN=your_trello_api_token_here
TRELLO_BOARD_ID=your_trello_board_id_here

# Application Settings
APP_ENV=development  # Options: development, production, testing
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Output Settings
OUTPUT_DIR=./reports
REPORT_FORMAT=markdown  # Options: markdown, html, pdf

# Notification Settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=yourname@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Model Settings
DEFAULT_MODEL=gpt-4  # Adjust based on your preference and availability
MODEL_TEMPERATURE=0.3
MAX_TOKENS=4096

# Application Customization
TEAM_NAME=Your Team Name
COMPANY_NAME=Your Company

# Performance Settings
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
MAX_RETRIES=3
RETRY_DELAY=2  # seconds

# DO NOT commit the actual .env file to version control!